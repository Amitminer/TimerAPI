{
    "name": "amitxd/timerapi",
    "description": "Simplify cooldowns, task scheduling, and time-related operations in your PocketMine plugins with TimerAPI.",
    "type": "pocketmine-plugin",
    "scripts": {
        "cs-fix": "vendor/bin/php-cs-fixer fix",
        "analyze": "vendor/bin/phpstan",
        "build": "php -dphar.readonly=0 vendor/bin/pharynx -i=. -c -p=TimerAPI.phar"
    },
    "require": {
        "phpstan/phpstan": "^1.10.29",
        "pocketmine/pocketmine-mp": "^5",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpstan/extension-installer": "^1.0"
    },
    "require-dev": {
        "sof3/pharynx": "^0.2",
        "friendsofphp/php-cs-fixer": "^3.17"
    },
    "license": "GNU Lesser",
    "autoload": {
        "psr-0": {
            "AmitxD\\TimerAPI\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
